{
  "kind": "collectionType",
  "collectionName": "tags",
  "info": {
    "name": "Tags"
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "Name": {
      "type": "string",
      "required": true
    },
    "Description": {
      "type": "text",
      "maxLength": 170
    },
    "Slug": {
      "type": "string",
      "regex": "^[a-z0-9]+(?:-[a-z0-9]+)*$"
    }
  }
}
