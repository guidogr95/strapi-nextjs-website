{
  "kind": "collectionType",
  "collectionName": "blogs",
  "info": {
    "name": "Blog",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "Title": {
      "type": "string",
      "required": true
    },
    "Publisher": {
      "plugin": "users-permissions",
      "model": "user"
    },
    "Thumbnail": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": true
    },
    "Featured": {
      "type": "boolean"
    },
    "Published": {
      "type": "datetime",
      "required": true
    },
    "Content": {
      "type": "richtext"
    },
    "ThumbnailBgColorHex": {
      "type": "text"
    },
    "Slug": {
      "type": "string",
      "regex": "^[a-z0-9]+(?:-[a-z0-9]+)*$",
      "required": true
    },
    "TitleColor": {
      "type": "string"
    },
    "LinkToResource": {
      "type": "component",
      "repeatable": false,
      "component": "universal.link-to-resource"
    }
  }
}
